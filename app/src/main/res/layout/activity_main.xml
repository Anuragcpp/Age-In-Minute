<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/bgColor"
    android:gravity="center_horizontal"
    android:padding="60px"
    >

    <TextView
        android:id="@+id/calculateYour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:text="CALCULTE YOUR"
        android:textColorHint="@color/textColor"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:background="@color/bgColor3"
        android:gravity="center_horizontal"
        android:text="AGE"
        android:padding="50px"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="34sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/inMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:text="IN MINUTE"
        android:textColorHint="@color/textColor"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDatePikker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:textSize="34sp"
        android:textColor="@color/textColor"
        android:backgroundTint="@color/bgColor3"
        android:layout_marginTop="30px"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:text="03/09/2023"
        android:textColorHint="@color/textColor"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Selected date"
        android:textColorHint="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeInMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColorHint="@color/textColor"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="IN MINUTES TILL NOW"
        android:textColorHint="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeInHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColorHint="@color/textColor"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tixtInHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="IN HOURS TILL NOW"
        android:textColorHint="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeInYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColorHint="@color/textColor"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textInYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="IN YEAR TILL NOW"
        android:textColorHint="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>